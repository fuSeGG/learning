<Window x:Class="NoteWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Topmost="False" WindowState="Normal" >
    <TreeView>        
        <Button x:Name="CategoriesButton" Content="1: Categories" Margin="100,100,500,250"/>
        <Button x:Name="OptionsButton" Content="2: Options" Margin="450,100,150,250"/>
        <Button x:Name="ExitButton" Content="3: Exit" Margin="450,250,150,100"/>
    </TreeView>
</Window>
